<resources>
    <!-- Base application theme -->
    <style name="Theme.PasswordManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimaryStart</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryEnd</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorHighlight</item>
        <item name="colorOnSecondary">@color/colorBlack</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorHighlight</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_box_bg</item>
    </style>
</resources>
